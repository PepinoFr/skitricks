{% extends 'base.html.twig' %}

{% block body %}
    {% if app.request.query.get('login') == true %}
        <script>
            // Créer la div du pop-up
            var popup = document.createElement('div');
            popup.classList.add('popup');
            popup.style.backgroundColor = 'green';
            popup.style.color = 'white';
            popup.style.position = 'fixed';
            popup.style.top = '80px';
            popup.style.right = '10px';
            popup.style.padding = '10px';
            popup.style.borderRadius = '10px';
            popup.innerHTML = 'le compte a été créée avec succès !';

            // Ajouter la div au body
            document.body.appendChild(popup);

            // Fermer le pop-up après 3 secondes
            setTimeout(function() {
                popup.parentNode.removeChild(popup);
            }, 3000);
        </script>
    {% endif %}
    <div style="display: flex;align-content: center;justify-content: center">
        <div style="padding-top: 50px;flex-direction: column;">
            <h1>Connection</h1>

            <form  action="{{ path('security_login') }}" method="post">
                <div  class="form-group">
                    <input placeholder="Adresse email" required name="_username" type="text" class="form-control">
                </div>
                <div style="padding-top: 10px;" class="form-group">
                    <input placeholder="Mot de passe " required name="_password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <a href="{{ path('app_forgot_password_request') }}"> mot de passe oublier </a>
                </div>
                <div style="padding-top: 50px;display: flex;align-content: center;justify-content: center" class="form-group">
                   <button type="submit" class="btn btn-success"> Connexion</button>
                </div>

            </form>
        </div>
    </div>
{% endblock %}