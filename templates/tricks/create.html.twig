{% extends 'base.html.twig' %}
{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}

{% block body %}
    {% if editMode %}
        <h1> modification d'un trick</h1>
    {% else %}
        <h1> creation d'un trick</h1>
    {% endif %}


    {{ form_start(formTrick) }}

    {{ form_row(formTrick.name,{'attr': {'placeholder': "Nom du trick"}}) }}
    {{ form_row(formTrick.category) }}
    {{ form_row(formTrick.content,{'attr': {'placeholder': "desciption "}}) }}
    {{ form_row(formTrick.brochure ) }}
    {{ form_row(formTrick.video,{'attr': {'placeholder': "url de la video"}} ) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Modifier
        {% else %}
            Ajouter le trick
        {% endif %}
    </button>

    {{ form_end(formTrick) }}

{% endblock %}